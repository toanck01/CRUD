@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification"></partial>
<h1>Category Table</h1>
<div style="text-align:right; width:100%">
    <a class="btn btn-light" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-circle"></i> Create Category</a>
</div>
<table class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <th width="40%">Category Name</th>
            <th width="40%">DisplayOrder</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.Id" asp-controller="Category"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id" asp-controller="Category"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

